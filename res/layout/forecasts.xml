<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bronze" >

<LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fg" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_horizontal|left"
        android:text="rainfall"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/rainfall"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:src="@drawable/rain" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:gravity="center_horizontal|left"
    android:text="temperature"
    android:textColor="@android:color/white"
    android:textSize="25sp" />

    <ImageView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:src="@drawable/temper" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_horizontal|left"
            android:text="dipression"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    <ImageView
            android:id="@+id/dipression"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:src="@drawable/dip" />
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_horizontal|left"
            android:text="drought"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

    <ImageView
        android:id="@+id/drought"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:src="@drawable/dro" />

</LinearLayout>
</ScrollView>